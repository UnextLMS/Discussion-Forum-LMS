Payload to target all the students under a course/program plan

[
    {
        "keys": {
           "UniqueId": "{{$guid}}" //Random Generated Id UUID/GUID
        },
        "values": 
        {
         "Target": "All",
         
         "ForumTitle": "ML Discussion",
         "ForumLink": "www.mldf.com",
         "CourseOfferingId": "SF 18 digit Id",
         "DiscussionForumId":"HI78",
       
         "StartDate": "04-12-2022",
         "EndDate": "04-14-2022",
         "Action": "Edited",
         "Choice":"Mandatory",
         "Type":"Gradable",
         "SubAction":"StartDate/EndDate/Choice/Type",
         "NewStartDate":"",   //Send this fields in the payload when startdate is edited
         "NewEndDate":""      //Send this fields in the payload when enddate is edited
         }

    }
]


