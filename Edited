         "EndDate": "04-14-2022",
         "Action": "Edited",
         "Choice":"Mandatory",
         "Type":"Gradable",
         "SubAction":"StartDate/EndDate/Choice/Type",
          "NewStartDate":"",   //Send this fields in the payload when startdate is edited
         "NewEndDate":""      //Send this fields in the payload when enddate is edited
          
          
         }

    }
